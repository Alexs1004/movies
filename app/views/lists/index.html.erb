
<div class="container text-center">
  <h1>Lists</h1>
  <div class="watch-list">
   <% @lists.each do |list| %>
    <div class="card-category card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to list.name, list_path(list) %>
    </div>
  <% end %>
  </div>
 
  <%= link_to 'Create a list', new_list_path, class: "btn btn-primary mt-4" %>
</div>
