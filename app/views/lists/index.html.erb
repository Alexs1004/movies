<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All lists</h1>
      <ul class="list-group">
        <% @lists.each do |list| %>
          <li class="list-group-item">
            <%= link_to list.name, list_path(list) %>
            <%= link_to "Add a movie to bookmark", new_list_bookmark_path(list), class: 'btn btn-primary' %>
            <%# <%= link_to "Delete", bookmark_path(@bookmark), :confirm => "Are you sure?", :method => :delete %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new list", new_list_path, class: 'btn btn-primary' %>
     
    </div>
  </div>
</div>