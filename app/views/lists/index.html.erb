<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fix-top">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "My list", "/lists", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "New list", "/lists/new", class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>




<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div>
    <h1>Lists</h1> 
  </div>
</div>

<div class="container text-center">
  <div class="watch-list">
   <% @lists.each do |list| %>
    <div class="card-category card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?movie <%= list.name.split.first  %>)">
      <%= link_to list.name, list_path(list) %>
    </div>
  <% end %>
  </div>
 
  <%= link_to 'Create a list', new_list_path, class: "btn btn-primary mt-4" %>
</div>
